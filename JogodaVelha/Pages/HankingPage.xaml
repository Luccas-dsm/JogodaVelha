        <StackLayout>
            <Label Text="TOP HANKING" FontAttributes="BOLD" FontSize="30" TextColor="#FFF" HorizontalTextAlignment="Center"/>
        </StackLayout>
        
        <Frame Grid.Row="1" BackgroundColor="#FFF" CornerRadius="10" Padding="0">
            
            <Grid RowDefinitions="200,*" ColumnDefinitions="*,*,*" Padding="5,5,5,0" >

                <Grid BackgroundColor="blue" Grid.ColumnSpan="3">
                    
                </Grid>
                <Grid BackgroundColor="green" Grid.Row="1"  Grid.ColumnSpan="3">

                </Grid>
            </Grid>
        </Frame>
    </Grid>
    
</ContentPage>